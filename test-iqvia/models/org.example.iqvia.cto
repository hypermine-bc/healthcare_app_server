/**
 * Write your model definitions here
 */

namespace org.example.iqvia

abstract participant Business identified by email {
  o String email
  o String firstName
  o String lastName
  o String password
  o Address address
}

concept Address {
  o String country
  o String city optional
  o String address optional
  o String mobile optional
  o String zip optional
}

participant OurUser extends Business {
  o Double accountBalance
}

participant AdminUser extends Business {
}

participant OurPayer extends Business {
  o Double transferBalance
}

asset moneyRequest identified by requestId {
  o String requestId
  --> OurUser user
  --> AdminUser netadmin
  o DateTime requestTime
  o TransferType currentStatus 
}

asset payerMoney identified by payedId {
  o String payedId
  --> OurPayer payer
  o Double payerMoney
  o DateTime requestTime
  o TransferType currentStatus 
}

enum TransferType {
  o INIT
  o IN_PROGRESS
  o SUCCESS
  o FAILED
}

transaction SampleTransaction {
  --> moneyRequest asset
  o String newValue
}
