/*
 * Logic permission
 */

rule userCanotSee {
  description: "User canot see any asset that he is not part of"
  participant(x): "org.example.iqvia.Patient"
  operation: ALL
  resource(y): "org.example.iqvia.moneyAllotedToUser"
  condition: (y.user.getIdentifier() != x.getIdentifier())
  action: DENY
}

rule userCanotDo_1 {
  description: "User canot do to asset money request given from IQVIA admin"
  participant: "org.example.iqvia.Patient"
  operation: CREATE, DELETE, UPDATE
  resource: "org.example.iqvia.moneyAllotedToUser"
  action: DENY
}

rule userCanotDo_2 {
  description: "User canot do to asset payer money given to IQVIA"
  participant: "org.example.iqvia.Patient"
  operation: ALL
  resource: "org.example.iqvia.payerMoney"
  action: DENY
}

rule userCanotDo_3 {
  description: "User canot do to any participant admin"
  participant: "org.example.iqvia.Patient"
  operation: ALL
  resource: "org.example.iqvia.IQVIA"
  action: DENY
}

rule userCanotDo_4 {
  description: "User canot do to any participant Payer"
  participant: "org.example.iqvia.Patient"
  operation: ALL
  resource: "org.example.iqvia.Charity"
  action: DENY
}

rule userCanotDo_5 {
  description: "User canot do to any participant User"
  participant: "org.example.iqvia.Patient"
  operation: ALL
  resource: "org.example.iqvia.Patient"
  action: DENY
}

rule payerCanotDelete {
  description: "Payer canot do to asset"
  participant: "org.example.iqvia.Charity"
  operation: CREATE, DELETE, UPDATE
  resource: "org.example.iqvia.moneyAllotedToUser"
  action: DENY
}

rule payerCanDelete {
  description: "Payer can do to asset payer money that he is a part of"
  participant(x): "org.example.iqvia.Charity"
  operation: DELETE, UPDATE, READ
  resource(y): "org.example.iqvia.payerMoney"
  condition: (y.payer.getIdentifier() == x.getIdentifier())
  action: ALLOW
}

rule payerCannotSee {
  description: "Payer can do to asset payer money that he is a part of"
  participant(x): "org.example.iqvia.Charity"
  operation: CREATE, DELETE, UPDATE
  resource(y): "org.example.iqvia.moneyAllotedToUser"
  condition: (y.payer.getIdentifier() != x.getIdentifier())
  action: DENY
}

rule payerCanDo_1 {
  description: "Payer can do to anny asset payer money"
  participant: "org.example.iqvia.Charity"
  operation: CREATE
  resource: "org.example.iqvia.payerMoney"
  action: ALLOW
}

rule payerCanotDo {
  description: "Payer canot do to asset payer money which he is not part of"
  participant(x): "org.example.iqvia.Charity"
  operation: DELETE, UPDATE, READ
  resource(y): "org.example.iqvia.payerMoney"
  condition: (y.payer.getIdentifier() != x.getIdentifier())
